{
  "name": "backend",
  "version": "1.0.0",
  "description": "a multi-tenant daily contribution for small scale businesses.",
  "main": "app.ts",
  "scripts": {
      "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nodemon app.ts",
    "populate": "ts-node ./seeds/populate",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/config.ts",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d dist/src/config/config.js",
    "migration:migrate": "typeorm-ts-node-commonjs -d dist/src/config/config.js migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d dist/src/config/config.js",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d dist/src/config/config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "axios": "^1.2.3",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "cloudinary": "^1.35.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0-rc.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.3.0",
    "faker": "^6.6.6",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "rollbar": "^2.26.1",
    "ts-command-line-args": "^2.3.1",
    "typeorm": "^0.3.12",
    "typeorm-pagination": "^2.0.3",
    "winston": "^3.8.2"
   },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.6.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
